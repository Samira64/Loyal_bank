<div class="page-header">
<h1>Log In</h1>
</div>

<%= form_tag sessions_path, class: "form-horizontal" do %>

<div class="form-group">
	<%= label_tag :email,nil, class: "control-label col-sm-2" %>
	<div class="col-sm-3"><%= email_field_tag :email, params[:email], class: "form-control" %></div>
</div>

<div class="form-group">
	<%= label_tag :password, nil, class: "control-label col-sm-2" %>
	<div class="col-sm-3"><%= password_field_tag :password, class: "form-control" %></div>
</div>

<%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>