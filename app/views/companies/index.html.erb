<div class="page-header">
	<h3>All Companies</h3>
</div>

<div class="filter">

	<ul class="pager index_pager">
		<li><%= link_to 'Create a New Company', new_company_url %></li>
	</ul>

<form method="GET">
	<label for="company_name" id="selection"> Filter by Company Name</label><br>
	<select  name="company_name" >
	     <% @list.each do |company| %>
	         <option value="<%= company.name %>" <%= "selected" if @has_filter && params[:company_name] == company.name 
	         %>><%=  company.name %></option>
	     <% end %>
	</select>
	
	<input type="submit" value="Update" class="btn btn-primary" id="index_update" />

	<% if @has_filter %>
		<a href="<%= request.path %>" class="btn btn-default" > Remove Filters </a>
	<% end %>	
</form>
</div>

<div class="row">
<div class="col-md-9">
<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Directors</th>
			<th>Address</th>
			<th>Accounts</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @companies.each do |company| %>
		<tr>
			<td><%= company.name %></td>
			<td><%= company.directors %></td>
			<td><%= company.address %></td>
			<td><%= company.bank_accounts.count %></td>
			<td> <%= link_to 'View', company_url(company), class: 'btn btn-default' %></td>
			<td><%= link_to 'Edit', edit_company_url(company), class: "btn btn-success" %></td>
			<td><%= link_to 'Delete', company_url(company), method: :delete, class: "btn btn-danger",
                                  data: { confirm: "Are You sure you want to delete this bank account?" } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>
</div>