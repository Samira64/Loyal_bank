<div class="panel-header">
	<div class="row">	
		<div class="col-sm-6 header-col">
			<p class="header-title">
				<%= image_tag @company.logo.url(:thumb), class: "img-rounded logo-img", style: 'width:40px; height:40px;' %>
				<span class="mlm"><%= @company.name.capitalize %></span>
			</p>
		</div>
		<div class="col-sm-6 header-col">
			<ul class="header-links">
				<li>
					<%= link_to company_url(@company.id), :data => {:confirm => 'Are you sure you want to delete this company?'}, method: :delete do %>
					<i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
					<% end %>
				</li>
				<li>
					<i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
					<a href="/companies/<%= @company.id %>/edit">Edit Company</a>
				</li>
			</ul>
		</div>
	</div>
</div>

<div class="panel-body">
	<div class="pll prl">
		<table class="table company">
			<tr>
				<td>
					<label>Full Name:</label> 
					<span class="info"><%= @company.name.capitalize %></span>
				</td>
			</tr>
			<tr>
				<td>
					<label>Directors:</label>
					<span class="info"><%= @company.directors.capitalize %></span>

				</td>
			</tr>
			<tr>
				<td>
					<label>Address:</label>
					<span class="info"><%= @company.address %></span>
				</td>
			</tr>

		</table>
	</div>
	<hr class="mtn mbn">
	<% @company.bank_accounts.each do |bank_account| %>
	<a href="<%=company_bank_account_url(@company, bank_account) %>" class="mam"> <%= bank_account.bank_name %> </a> <br>
	<% end %>
</div>

<div class="pnl-footer">
	<center>
		<i class="fa fa-plus-square-o fa-lg" aria-hidden="true"></i>
		<a href="/companies/<%= @company.id %>/bank_accounts/new" class="link"> Add New Bank Account</a>
	</center>
</div>










