<div class="page-header">
	<h3>Show Details for <%= @company.name %></h3>
</div>

<div class="filter">

	<ul class="pager show-pager">
		<li><%= link_to 'Create a New Bank Account', new_company_bank_account_url(@company) %></li>
	</ul>

	<form method="GET">
		<label for="bank_name">Filter by Bank Name</label>
		<select name="bank_name">
			<% @distinct_accounts.each do |account| %>
			<option value = "<%= account.bank_name %>" <%= "selected" if @has_filter && params["bank_name"] == account.bank_name %>> <%= account.bank_name %> </option>
			<% end %>
		</select>

		<input type="submit" value="Update" class="btn btn-primary" />

		<% if @has_filter %>
		<a href="<%= request.path %>" class="btn btn-default" >Remove Filter</a>
		<% end %>
	</form>
</div>

<p><%= image_tag @company.logo.url(:small) %></p>
<p>
	<strong>Name:</strong>
	<%= @company.name %>
</p>
<p><strong>Address:</strong>
	<%= @company.address %>
</p>
<p><strong>Directors:</strong>
	<%= @company.directors %>
</p><br>

<strong>This company's account numbers:</strong><br><br>

<div class="row">
	<div class="col-md-8">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Bank Name</th>
					<th>Currency</th>
					<th></th>
				</tr>
			</thead>
			<tbody> 
				<% @bank_accounts.each do |account| %>
				<tr>
					<td><%= account.bank_name %></td>
					<td><%= account.currency %></td>
					<td> <%= link_to 'View', company_bank_account_url(@company, account), class: "btn btn-default" %></td>	
					<td><%= link_to  'Edit', edit_company_bank_account_url(@company, account), class: "btn btn-success" %></td>
					<td><%= link_to 'Delete', company_bank_account_url(@company, account), method: :delete, class: "btn btn-danger", data: {confirm: "Are you are you want to delete this account?"} %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<br>

<ul class="pager back-button">
	<li><%= link_to 'Back To Companies', companies_url %></li>
</ul>