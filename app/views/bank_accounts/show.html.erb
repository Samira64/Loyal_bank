<div class="panel-header">
	<div class="row">	
		<div class="col-sm-6 header-col">
			<p class="header-title">
				<%= image_tag @bank_account.logo.url(:small), class: "img-rounded logo-img", style: 'width:40px; height:40px;' %>
				<span class="mlm"><%= @bank_account.bank_name.capitalize %></span>
			</p>
		</div>
		<div class="col-sm-6 header-col">
			<ul class="header-links">
				<li>
					<a href="/companies/<%= @company.id %>/bank_accounts/<%= @bank_account.id %>" data-confirm="Are you are you want to delete this bank account?" rel="nofollow" data-method="delete">
						<i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
					</a>
				</li>
				<li>
					<i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
					<a href="/companies/<%= @company.id %>/bank_accounts/<%= @bank_account.id %>/edit">Edit Bank Account</a>
				</li>
			</ul>
		</div>
	</div>
</div>

<div class="panel-body">
	<div class="pll prl">
		<table class="table company">
			<tr>
				<td>
					<label>Bank Name:</label> 
					<span class="info"><%= @bank_account.bank_name.capitalize %></span>
				</td>
			</tr>
			<tr>
				<td>
					<label>Account Number:</label>
					<span class="info"><%= @bank_account.account_number.capitalize %></span>

				</td>
			</tr>
			<tr>
				<td>
					<label>Currency:</label>
					<span class="info"><%= @bank_account.currency %></span>
				</td>
			</tr>
			<tr>
				<td>
					<label>Account_type:</label>
					<span class="info"><%= @bank_account.account_type %></span>
				</td>
			</tr>
			<tr>
				<td>
					<label>Swift Code:</label>
					<span class="info"><%= @bank_account.swift_code %></span>
				</td>
			</tr>
			<tr>
				<td>
					<label>Address:</label>
					<span class="info"><%= @bank_account.bank_address %></span>
				</td>
			</tr>

		</table>
	</div>
	<hr class="mtn mbn">

	<div class="pnl-footer">
		<center>
			<%= link_to "Back to #{@company.name}", @bank_account.company, class: "link" %>
		</center>
	</div>

